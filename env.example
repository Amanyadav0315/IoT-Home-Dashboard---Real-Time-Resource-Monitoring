# IoT Home Dashboard Environment Variables
# Copy this file to .env and fill in your actual API keys

# Nest API Configuration
# Get your API key from: https://developers.nest.com/
NEST_API_KEY=your_nest_api_key_here

# Sense Energy API Configuration
# Get your API key from: https://developers.sense.com/
SENSE_API_KEY=your_sense_api_key_here

# Server Configuration
PORT=3000

# SSL Configuration (for production)
# SSL_KEY_PATH=/path/to/private.key
# SSL_CERT_PATH=/path/to/certificate.crt

# Database Configuration (if using database)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=iot_dashboard
# DB_USER=username
# DB_PASSWORD=password
